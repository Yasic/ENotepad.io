<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#3399FF">
    <Button
        android:id="@+id/notebackbutton"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:background="@drawable/ic_arrow_left_white_48dp"
        android:textAllCaps="false"
        android:textSize="24dp"
        >
    </Button>
    <Button
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:id="@+id/notedeletebutton"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/notesavebutton"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_delete_white_48dp">
        </Button>
    <Button
        android:id="@+id/notesavebutton"
        android:layout_width="30dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_check_white_48dp"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        >
    </Button>
    </RelativeLayout>