            android:id="@+id/login_appname"
            android:text="Noop"
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#3399ff"
            android:textSize="81sp"
            app:reflectionColor="#000000" />
