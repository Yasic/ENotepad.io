<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e88e5">
    <RelativeLayout
        android:layout_height="0dp"
        android:layout_weight="618"
        android:layout_width="fill_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Noop"
            android:textSize="112dp"
            android:background="#ffffff"
            android:textColor="#42a5f5"
            android:textScaleX="1.2"
            android:typeface="serif"
            android:paddingBottom="25dp"
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowRadius="1"
            android:shadowColor="#000000"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1000">
        <TextView
            android:id="@+id/welcompage_jianyuetext"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="#e3f2fd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简约分类"
            android:layout_alignParentLeft="true"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/welcompage_kuaijietext"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:textColor="#e3f2fd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcompage_jianyuetext"
            android:text="快捷查看"
            android:layout_alignParentRight="true"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/welcompage_yunduantext"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:textColor="#e3f2fd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcompage_kuaijietext"
            android:text="云端同步"
            android:layout_alignParentLeft="true"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/welcomepag_yiditext"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:textColor="#e3f2fd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcompage_yunduantext"
            android:text="异地共享"
            android:layout_alignParentRight="true"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_below="@id/welcomepag_yiditext"
            android:layout_marginTop="34dp"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ffffff"
                android:layout_gravity="right"
                android:layout_marginRight="54dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Login Now "
                android:textSize="34dp"
                android:textStyle="italic">
                </TextView>
            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="54dp"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Now Rigester"
                android:textSize="34dp"
                android:textStyle="italic">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="本地使用(不支持云同步)"
            android:layout_alignParentBottom="true"
            android:textSize="24dp"
            android:textColor="#263238"
            android:textScaleX="1.2"
            android:gravity="center" />
    </RelativeLayout>
</LinearLayout>